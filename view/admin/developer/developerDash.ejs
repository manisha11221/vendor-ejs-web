<!-- developerDash.ejs -->
<%- include('../../layouts/header.ejs') %> 
<%- include('../../layouts/sidebar.ejs') %>

<div class="container-scroller">
  <div class="container-fluid page-body-wrapper">
    <div class="main-panel">
      <div class="content-wrapper">
        <!-- Developer data table -->
        <div class="row">
          <div class="col-md-12">
            <div class="page-header">
              <h3 class="page-title">Developer Dashboard</h3>
            </div>
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">All Developers</h4>
                <div class="table-responsive">
                  <table class="table table-striped" id="developerTable">
                    <thead>
                      <tr>
                        <th>Sr.No</th>
                        <th>Name</th>
                        <th>Technology</th>
                        <th>Experience</th>
                        <!-- Add more columns based on your developer model -->
                      </tr>
                    </thead>
                    <tbody></tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Inline script to fetch and populate data -->
        <script>
          document.addEventListener("DOMContentLoaded", function () {
            // Fetch data from the API
            fetch("http://localhost:3000/developer/get-devAll/")
              .then((response) => response.json())
              .then((data) => {
                displayDevelopers(data.developers);
                // Initialize DataTable
                $('#developerTable').DataTable();
              })
              .catch((error) => {
                console.error("Error fetching data:", error);
              });

            function displayDevelopers(developers) {
              const table = $('#developerTable').DataTable();
              developers.forEach((developer, index) => {
                table.row.add([
                  index + 1,
                  developer.name,
                  developer.technology,
                  developer.experience
                ]).draw();
              });
            }
          });

          const tokens = localStorage.getItem("adminToken");

          if (!tokens) {
            // Redirect to the login page if the token is not present
            window.location.href = "/login";
          }
        </script>

        <%- include('../../layouts/footer.ejs') %>
      </div>
    </div>
  </div>
</div>
