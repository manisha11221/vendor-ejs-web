<%- include('../layouts/header.ejs') %>
<%- include('../layouts/vendor-dashboard.ejs') %>

<div class="container-scroller">
  <div class="container-fluid page-body-wrapper">
    <div class="main-panel">
      <div class="content-wrapperrr">
        <div class="page-header">
          <h3 class="page-title"> Developer Dashboard </h3>
        </div>

        <!-- Add button to toggle developer form -->
        <div class="mb-3">
          <button id="toggleDeveloperForm" class="btn btn-primary">Add Developer</button>
        </div>

        <!-- Developer form initially hidden -->
        <div id="developerFormContainer" style="display: none;">
          <div class="card col-md-12">
            <div class="card-body">
              <h4 class="card-title">Create Developer</h4>
              <form id="createDeveloperForm">
                <div class="row">

                
                <!-- Add input fields for developer details (name, technology, experience) -->
                <div class="col-md-6">

                  <div class="form-group">
                    <label for="developerName">Name</label>
                    <input type="text" class="form-control" id="developerName" placeholder="Enter name" required>
                  </div>
                </div>
                <div class="col-md-6">

                  <div class="form-group">
                    <label for="technology">Technology</label>
                    <input type="text" class="form-control" id="technology" placeholder="Enter technology" required>
                  </div>
                </div>
                <div class="col-md-6">

                  <div class="form-group">
                    <label for="experience">Experience</label>
                    <input type="text" class="form-control" id="experience" placeholder="Enter experience" required>
                  </div>
                </div>

                
              </div>
              <button type="submit" class="btn btn-primary">Create Developer</button>
              </form>
            </div>
          </div>
        </div>

        <div class="card mt-3">
          <div class="card-body">
            <h4 class="card-title">All Developers</h4>
            <div class="table-responsive">
              <table class="table table-striped" id="developerTable">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Technology</th>
                    <th>Experience</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody id="developerTableBody">
                  <!-- Table rows will be dynamically populated here -->
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>

<script>
  // Toggle visibility of developer form
  document.getElementById('toggleDeveloperForm').addEventListener('click', function () {
    var formContainer = document.getElementById('developerFormContainer');
    formContainer.style.display = formContainer.style.display === 'none' ? 'block' : 'none';
  });

  // Handle form submission
  document.getElementById('createDeveloperForm').addEventListener('submit', function (event) {
    event.preventDefault();

    var developerName = document.getElementById('developerName').value;
    var technology = document.getElementById('technology').value;
    var experience = document.getElementById('experience').value;

    // Add the new developer to the table
    addDeveloperToTable(developerName, technology, experience);

    // Clear the form fields
    document.getElementById('developerName').value = '';
    document.getElementById('technology').value = '';
    document.getElementById('experience').value = '';

    // Hide the form after submission
    document.getElementById('developerFormContainer').style.display = 'none';
  });

  // Function to add developer to the table
  function addDeveloperToTable(name, tech, exp) {
    var tableBody = document.getElementById('developerTableBody');
    var newRow = tableBody.insertRow(tableBody.rows.length);

    var cell1 = newRow.insertCell(0);
    var cell2 = newRow.insertCell(1);
    var cell3 = newRow.insertCell(2);
    var cell4 = newRow.insertCell(3);
    var cell5 = newRow.insertCell(4);

    cell1.innerHTML = tableBody.rows.length; // You may replace this with the actual ID if available
    cell2.innerHTML = name;
    cell3.innerHTML = tech;
    cell4.innerHTML = exp;
    cell5.innerHTML = '<button class="btn btn-danger" onclick="deleteDeveloper(this)">Delete</button>';
  }

  // Function to delete a developer row
  function deleteDeveloper(button) {
    var row = button.parentNode.parentNode;
    row.parentNode.removeChild(row);
  }
</script>
