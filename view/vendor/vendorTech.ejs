<%- include('../layouts/header.ejs') %>

<%- include('../layouts/vendor-dashboard.ejs') %>
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="page-header">
                    <h3 class="page-title"> Developer Dashboard </h3>
                </div>


                    <!-- Button to Open Popup Model -->
                    <div class="col-md-6">
                        <button class="btn btn-success" data-toggle="modal" data-target="#myModal">Open Developer Model</button>
                    </div>
                </div>

                <!-- Developer Data Table -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">All Developers</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped" id="developerTable">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Technology</th>
                                                <th>Experience</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="developerTableBody">
                                            <!-- Table rows will be dynamically populated here -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End of Developer Data Table -->

                <!-- Popup Model for Developer Form -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Create Developer</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <!-- Add input fields for developer details (name, experience, technology, resume, etc.) -->
                                <form id="createDeveloperFormInModal">
                                    <div class="form-group">
                                        <label for="developerNameInModal">Name</label>
                                        <input type="text" class="form-control" id="developerNameInModal" placeholder="Enter name" required>
                                    </div>
                                    <!-- Add more input fields for other developer details -->
                                    <button type="submit" class="btn btn-primary">Create Developer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End of Popup Model for Developer Form -->
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer.ejs') %>


